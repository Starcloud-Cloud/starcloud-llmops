<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starcloud.ops.business.app.dal.mysql.market.AppMarketMapper">
    
    <!-- 基础字段 -->
    <sql id="SELECT_COLUMNS">
        id, uid, name, type, model, version, language, sort, tags,
        category, scenes, images, icon, free, cost, usage_count, like_count,
        view_count, install_count, description, audit, deleted, creator, updater,
        create_time, update_time, tenant_id
    </sql>
    
    <!-- 基础条件 -->
    <sql id="SELECT_CONDITIONS">
        <where>
            <if test="query.name != null and query.name != '' ">
                AND name LIKE CONCAT(#{query.name}, '%')
            </if>
            <if test="query.type != null and query.type != '' ">
                AND type = #{query.type}
            </if>
            <if test="query.model != null and query.model != '' ">
                AND model = #{query.model}
            </if>
            <if test="query.category != null and query.category != '' ">
                AND category = #{query.category}
            </if>
            <if test="query.scenes != null and query.scenes.size() > 0">
                AND
                <foreach collection='query.scenes' item='scene' separator=' AND '>
                    FIND_IN_SET(#{scene}, scenes)
                </foreach>
            </if>
            <if test="query.tags != null and query.tags.size() > 0 ">
                AND
                <foreach collection='query.tags' item='tag' separator=' AND '>
                    FIND_IN_SET(#{tag}, tags)
                </foreach>
            </if>
            AND deleted = 0
        </where>
        ORDER BY sort IS NULL, sort ASC, update_time DESC
    </sql>
    
    <!-- 根据条件查询应用市场详情 -->
    <select id="getOne" resultType="com.starcloud.ops.business.app.dal.databoject.market.AppMarketDO">
        SELECT
        <include refid="SELECT_COLUMNS"/>, config, example
        FROM llm_app_market
        <include refid="SELECT_CONDITIONS"/>
        LIMIT 1
    </select>
    
    <!-- 根据条件查询应用市场列表 -->
    <select id="list" resultType="com.starcloud.ops.business.app.dal.databoject.market.AppMarketDO">
        SELECT
        <include refid="SELECT_COLUMNS"/>
        <if test="query.isSimple != null and query.isSimple == false ">
            , config
        </if>
        FROM llm_app_market
        <include refid="SELECT_CONDITIONS"/>
    </select>
    
    <!-- 根据应用名称查询 COMPLETION 模式的应用数量 -->
    <select id="countCompletionAppByName" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM llm_app_market
        WHERE name = #{name}
          AND model = 'COMPLETION'
          AND deleted = 0
    </select>


</mapper>