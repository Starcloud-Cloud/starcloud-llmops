<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starcloud.ops.business.app.dal.mysql.xhs.scheme.CreativeSchemeMapper">
    
    <!-- 通用字段查询 -->
    <sql id="SELECT_GENERAL_COLUMNS">
        `id`
        , `uid`, `name`, `type`, `category`, `tags`, `description`, `copy_writing_example`, `image_example`, `deleted`, `creator`, `updater`, `create_time`, `update_time`, `tenant_id`
    </sql>
    
    <!-- 列表查询条件 -->
    <sql id="LIST_SELECT_QUERY_CONDITION">
        <where>
            ((`type` = "SYSTEM")
            OR
            (`type` = "USER"
            <if test="query.uidList != null and query.uidList.size() > 0 ">
                AND `uid` IN
                <foreach collection='query.uidList' item='uid' open='(' separator=',' close=')'>
                    #{uid}
                </foreach>
            </if>
            <if test="query.name != null and query.name != '' ">
                <bind name="name" value="query.name+'%'"/>
                AND `name` LIKE #{name}
            </if>
            <if test="query.category != null and query.category != '' ">
                AND `category` = #{query.category}
            </if>
            <if test="query.tags != null and query.tags.size() > 0 ">
                AND
                <foreach collection='query.tags' item='tag' separator=' AND '>
                    FIND_IN_SET(#{tag}, tags)
                </foreach>
            </if>
            <choose>
                <when test="query.isAdmin != null and query.isAdmin != true ">
                    AND `creator` = #{query.loginUserId}))
                </when>
                <otherwise>
                    ))
                </otherwise>
            </choose>
            
            AND `deleted` = 0
        </where>
    </sql>
    
    <!-- 根据UID查询创作方案详情 -->
    <select id="get" resultType="com.starcloud.ops.business.app.dal.databoject.xhs.scheme.CreativeSchemeDO">
        SELECT
        <include refid="SELECT_GENERAL_COLUMNS"/>, `refers`, `configuration`
        FROM llm_creative_scheme
        WHERE uid = #{uid}
        AND `deleted` = 0
    </select>
    
    <!-- 根据条件查询创作方案列表 -->
    <select id="list" resultType="com.starcloud.ops.business.app.dal.databoject.xhs.scheme.CreativeSchemeDO">
        SELECT
        <include refid="SELECT_GENERAL_COLUMNS"/>, `refers`, `configuration`
        FROM llm_creative_scheme
        <include refid="LIST_SELECT_QUERY_CONDITION"/>
    </select>
    
    <!-- 根据 UID 列表查询创作方案列表 -->
    <select id="listByUidList" resultType="com.starcloud.ops.business.app.dal.databoject.xhs.scheme.CreativeSchemeDO">
        SELECT
        <include refid="SELECT_GENERAL_COLUMNS"/>, `refers`, `configuration`
        FROM llm_creative_scheme
        <where>
            <if test="uidList != null and uidList.size() > 0 ">
                AND `uid` IN
                <foreach collection='uidList' item='uid' open='(' separator=',' close=')'>
                    #{uid}
                </foreach>
            </if>
            AND `deleted` = 0
        </where>
    </select>
    
    <!-- 根据条件分页查询创作方案列表 -->
    <select id="page" resultType="com.starcloud.ops.business.app.dal.databoject.xhs.scheme.CreativeSchemeDO">
        SELECT
        <include refid="SELECT_GENERAL_COLUMNS"/>
        FROM llm_creative_scheme
        <where>
            <if test="query.uidList != null and query.uidList.size() > 0 ">
                AND `uid` IN
                <foreach collection='query.uidList' item='uid' open='(' separator=',' close=')'>
                    #{uid}
                </foreach>
            </if>
            <if test="query.name != null and query.name != '' ">
                <bind name="name" value="query.name+'%'"/>
                AND `name` LIKE #{name}
            </if>
            <if test="query.category != null and query.category != '' ">
                AND `category` = #{query.category}
            </if>
            <if test="query.tags != null and query.tags.size() > 0 ">
                AND
                <foreach collection='query.tags' item='tag' separator=' AND '>
                    FIND_IN_SET(#{tag}, tags)
                </foreach>
            </if>
            AND `deleted` = 0
        </where>
        ORDER BY `create_time` DESC
    </select>


</mapper>